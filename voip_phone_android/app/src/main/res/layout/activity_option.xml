<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screen.fragment.OptionFragment"
    android:orientation="vertical"
    android:gravity="center_vertical"
    style="@style/RelativeLayout"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity ="center"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="20sp"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/audioCodecSelectButton"
                    android:layout_width="135sp"
                    android:layout_height="50sp"
                    android:text="@string/audio_codec_select_button_name"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3sp"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/selectedAudioCodec"
                    android:layout_width="100sp"
                    android:layout_height="25sp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:layout_marginStart="30sp"

                    android:textColor="@color/white"
                    android:text="@string/none"
                    android:background="@drawable/textview_border"
                    tools:ignore="RtlCompat">
                </com.google.android.material.textview.MaterialTextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp"
                app:strokeColor="@color/white"
                app:strokeWidth="3sp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    >

                    <Switch
                        android:id="@+id/clientModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:textSize="12sp"
                        android:text="@string/client_mode_switch_name"
                        tools:ignore="UseSwitchCompatOrMaterialXml">
                    </Switch>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:layout_marginStart="10sp"
                    >

                    <Switch
                        android:id="@+id/proxyModeSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:textSize="12sp"
                        android:text="@string/proxy_mode_switch_name"
                        tools:ignore="UseSwitchCompatOrMaterialXml">
                    </Switch>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="10sp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    >

                    <Switch
                        android:id="@+id/useProxySwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:text="@string/use_proxy_switch_name"
                        tools:ignore="UseSwitchCompatOrMaterialXml">
                    </Switch>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:layout_marginStart="10sp"
                    >

                    <Switch
                        android:id="@+id/autoAcceptSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:text="@string/auto_accept_switch_name"
                        tools:ignore="UseSwitchCompatOrMaterialXml">
                    </Switch>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginBottom="20sp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    >

                    <Switch
                        android:id="@+id/dtmfSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:text="@string/dtmf_switch_name"
                        tools:ignore="UseSwitchCompatOrMaterialXml">
                    </Switch>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:layout_marginStart="10sp"
                    >

                    <Switch
                        android:id="@+id/sendWavSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:text="@string/send_wav_switch_name"
                        tools:ignore="UseSwitchCompatOrMaterialXml">
                    </Switch>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5sp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/localHostNameInputLayout"
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    app:counterMaxLength="20"
                    app:counterEnabled="true"
                    android:inputType="text"
                    android:textSize="12sp"
                    android:maxLength="20"
                    android:singleLine="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/localHostNameInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/local_host_name_hint"
                        android:textSize="12sp"
                        android:minHeight="48sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/localHostNameEnterButton"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:text="@string/ok_button_name"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5sp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/localSipIpInputLayout"
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    app:counterMaxLength="15"
                    app:counterEnabled="true"
                    android:inputType="text"
                    android:textSize="12sp"
                    android:maxLength="15"
                    android:singleLine="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/localSipIpInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/from_sip_ip_hint"
                        android:textSize="12sp"
                        android:minHeight="48sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/localSipIpEnterButton"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:text="@string/ok_button_name"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5sp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/localSipPortInputLayout"
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    app:counterMaxLength="5"
                    app:counterEnabled="true"
                    android:inputType="number"
                    android:textSize="12sp"
                    android:maxLength="5"
                    android:singleLine="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/localSipPortInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/from_sip_port_hint"
                        android:textSize="12sp"
                        android:minHeight="48sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/localSipPortEnterButton"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:text="@string/ok_button_name"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5sp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/localMediaIpInputLayout"
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    app:counterMaxLength="15"
                    app:counterEnabled="true"
                    android:inputType="text"
                    android:maxLength="15"
                    android:textSize="12sp"
                    android:singleLine="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/localMediaIpInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/media_ip_hint"
                        android:textSize="12sp"
                        android:minHeight="48sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/localMediaIpEnterButton"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:text="@string/ok_button_name"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5sp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/localMediaPortInputLayout"
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    app:counterMaxLength="5"
                    app:counterEnabled="true"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textSize="12sp"
                    android:singleLine="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/localMediaPortInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/media_port_hint"
                        android:textSize="12sp"
                        android:minHeight="48sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/localMediaPortEnterButton"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:text="@string/ok_button_name"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5sp"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/recordPathInputLayout"
                    android:layout_width="230sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    app:counterMaxLength="100"
                    app:counterEnabled="true"
                    android:inputType="text"
                    android:maxLength="100"
                    android:textSize="12sp"
                    android:singleLine="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/recordPathInputField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/record_path_hint"
                        android:textSize="12sp"
                        android:minHeight="48sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recordPathEnterButton"
                    android:layout_width="60sp"
                    android:layout_height="50sp"
                    android:layout_marginStart="10sp"
                    android:text="@string/ok_button_name"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white"
                    app:strokeWidth="3sp"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>