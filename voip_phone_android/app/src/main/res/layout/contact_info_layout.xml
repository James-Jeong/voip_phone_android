<?xml version="1.0" encoding="utf-8"?>
<com.jamesj.voip_phone_android.ui.screen.layout.CheckableContactLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    style="@style/RelativeLayout"
    android:descendantFocusability="blocksDescendants"
    >

    <!--<ImageView
        android:id="@+id/contact_info_imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="textStart"
        android:src="@drawable/unspecified_person" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_name_des"
                            android:layout_width="65sp"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_name" />

                        <TextView
                            android:id="@+id/textView_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView_email_des"
                            android:layout_width="65sp"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_email" />

                        <TextView
                            android:id="@+id/textView_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView_mdn_des"
                            android:layout_width="65sp"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_mdn" />

                        <TextView
                            android:id="@+id/textView_mdn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView_sip_ip_des"
                            android:layout_width="65sp"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_sip_ip" />

                        <TextView
                            android:id="@+id/textView_sip_ip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/textView_sip_port_des"
                            android:layout_width="65sp"
                            android:layout_height="wrap_content"
                            android:text="@string/contact_sip_port" />

                        <TextView
                            android:id="@+id/textView_sip_port"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="textStart" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_marginBottom="5sp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_call"
                            android:layout_width="match_parent"
                            android:layout_height="40sp"
                            android:text="@string/call_button_name"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="3sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_checkbox"
            android:layout_gravity="center"
            android:gravity="center"
            android:focusable="false"
            android:clickable="false" />

    </LinearLayout>

</com.jamesj.voip_phone_android.ui.screen.layout.CheckableContactLinearLayout>